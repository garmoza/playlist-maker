<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinerLayoutMainActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_black</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="InputIconStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="tint">@color/yp_black</item>
    </style>
</resources>