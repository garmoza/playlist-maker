<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinerLayoutMainActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_black</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@drawable/bg_input</item>
    </style>
    <style name="InputEditTextWithIconBeforeStyle" parent="InputEditTextStyle">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="InputCloseIconStyle">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">@color/yp_black</item>
    </style>
</resources>