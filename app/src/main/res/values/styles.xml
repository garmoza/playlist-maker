<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinerLayoutMainActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_blue</item>
    </style>
    <style name="ButtonMainActivityStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/screen_horizontal_indent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/app_white</item>
        <item name="android:text">@string/text</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="icon">@drawable/ic_library</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/app_black</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/screen_horizontal_indent</item>
        <item name="android:paddingVertical">@dimen/settings_menu_item_padding_vertical</item>
        <item name="android:text">@string/text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>
    <style name="TextViewMenuItemWithIconStyle" parent="MenuItemStyle">
        <item name="drawableEndCompat">@drawable/ic_arrow_forward</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:title">@string/text</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
    </style>
    <style name="ToolbarWithNavigationIconStyle" parent="ToolbarStyle">
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="InputFrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/screen_horizontal_indent</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    <style name="InputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@drawable/bg_input</item>
    </style>
    <style name="InputEditTextWithIconBeforeStyle" parent="InputEditTextStyle">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="InputCloseIconStyle">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>
</resources>